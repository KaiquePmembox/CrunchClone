@{
    ViewData["Title"] = "Minha Conta";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="navbar-logo">
                <a href="/">
                    <img src="https://via.placeholder.com/150x50" alt="Logo do site" class="logo" />
                </a>
            </div>
            <div class="navbar-links">
                <a href="/MinhaConta">Minha Conta</a>
            </div>
        </nav>
    </header>

    <main>
        <section class="account-section">
            <h2>Minha Conta</h2>

            <!-- Área de exibição das informações atuais do usuário -->
            <div class="account-info">
                <h3>Informações Atuais</h3>
                <p><strong>Nome:</strong> @User.Identity.Name</p>
                <p><strong>Email:</strong> user@example.com</p> <!-- Substitua pelo campo real de email -->
            </div>

            <!-- Formulário para alteração de nome e senha -->
            <form asp-action="UpdateAccount" method="post" class="account-form">
                <div class="form-group">
                    <label for="name">Nome da Conta</label>
                    <input type="text" id="name" name="name" value="@User.Identity.Name" required />
                </div>

                <div class="form-group">
                    <label for="password">Nova Senha</label>
                    <input type="password" id="password" name="password" placeholder="Digite a nova senha" />
                </div>

                <div class="form-group">
                    <label for="confirmPassword">Confirmar Nova Senha</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirme a nova senha" />
                </div>

                <button type="submit" class="btn-update">Atualizar Conta</button>
            </form>

            <!-- Exibe uma mensagem de sucesso ou erro, se aplicável -->
            @if (ViewData["Message"] != null)
            {
                <p class="message">@ViewData["Message"]</p>
            }
        </section>
    </main>

    <footer>
        <p>&copy; 2024 Streaming Service</p>
    </footer>
</body>
</html>
