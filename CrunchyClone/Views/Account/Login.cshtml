<h2>Login</h2>
<form asp-action="Login" method="post">
    <div>
        <label>Usuário</label>
        <input type="text" name="Username" required />
    </div>
    <div>
        <label>Senha</label>
        <input type="password" name="Password" required />
    </div>
    <button type="submit">Entrar</button>
</form>
<p>@ViewBag.Message</p>